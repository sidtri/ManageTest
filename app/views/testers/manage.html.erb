<section>
	<center><b><%= Project.find(params[:id]).name %></b></center><hr>
<%if @exists==nil %>

	<%= form_tag tester_manage_path, :method => 'post' do  %>
	<legend>Acknowledge</legend>
	<div class="form-group">
	<%= label_tag("Proper Documents are uploaded ----") %>
    <%= label_tag(:docs_yes, " Yes") %>
    <%= radio_button_tag(:docs, "1",:class=>'form-control') %>
	<%= label_tag(:docs_no, "No") %>
	<%= radio_button_tag(:docs, "0",:class=>'form-control') %>
	</div>
	<div class="form-group">
	<%= label_tag("Given Time is sufficient ----") %>
    <%= label_tag(:time_yes, " Yes") %>
    <%= radio_button_tag(:time, "1",:class=>'form-control') %>
	<%= label_tag(:time_no, "No") %>
	<%= radio_button_tag(:time, "0",:class=>'form-control') %>
	</div>
  	
  	<div class="form-group">
	<%= label_tag("Resources are available ----") %>
    <%= label_tag(:resources_yes, " Yes") %>
    <%= radio_button_tag(:resources, "1",:class=>'form-control') %>
	<%= label_tag(:resources_no, "No") %>
	<%= radio_button_tag(:resources, "0",:class=>'form-control') %>
	</div>
  	
  	<div class="form-group">
    <%= label_tag :content, 'Content' %><br>
    <%= text_field_tag :content,nil,:class=> 'form-control' %><br />
  	</div>
  
  <%= submit_tag 'submit',:class=> 'btn btn-default' %>

<% end %>

</section>
<%else %>
   	<%=link_to 'Initiate Testing',pinitiate_path(params[:id]),:class=>'btn btn-info pull-right' %>
   	<p class='code pull-left'>Name : <%= @exists.request.dev %></p>
	<span style='margin-left:25px;'><%= @exists.request.content %></span> <hr>
			
		
		
		
	
	</section>
<%end %>